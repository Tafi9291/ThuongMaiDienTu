    ViewBag.Title = "TaoSanPham";
    Layout = "~/Views/Shared/Layout-NgBan.cshtml";
}

<div class="col l-8 m-12 c-12">
    <div class="home-product">
        <div class="row sm-gutter" style="padding-right: 16px;">
            <div class="product-edit">
                <div class="product-edit__container">
                    <div class="title-page">
                        <div class="title-page__link">
                            <a href="@Url.Action("KenhNgBan", "NgBan")" class="title-page__link-label">Trang chủ</a>
                            <i class='bx bx-chevron-right'></i>
                            <a href="@Url.Action("SanPham", "SanPham")" class="title-page__link-label">Sản phẩm</a>
                            <i class='bx bx-chevron-right'></i>
                            <a href="@Url.Action("TaoSanPham", "SanPham")" class="title-page__link-label">Thêm mới sản phẩm</a>
                        </div>
                    </div>
                    <div class="product-edit__main">
                        <section class="product-edit__section" id="section-basic-info">
