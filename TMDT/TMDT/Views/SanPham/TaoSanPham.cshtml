
@{
    ViewBag.Title = "TaoSanPham";
    Layout = "~/Views/Shared/Layout-NgBan.cshtml";
}

<div class="col l-8 m-12 c-12">
    <div class="home-product">
        <div class="row sm-gutter" style="padding-right: 16px;">
            <div class="product-edit">
                <div class="product-edit__container">
                    <div class="title-page">
                        <div class="title-page__link">
                            <a href="@Url.Action("KenhNgBan", "NgBan")" class="title-page__link-label">Trang chủ</a>
                            <i class='bx bx-chevron-right'></i>
                            <a href="@Url.Action("SanPham", "SanPham")" class="title-page__link-label">Sản phẩm</a>
                            <i class='bx bx-chevron-right'></i>
                            <a href="@Url.Action("TaoSanPham", "SanPham")" class="title-page__link-label">Thêm mới sản phẩm</a>
                        </div>
                    </div>
                    <div class="product-edit__main">
                        <section class="product-edit__section">
                            <div class="product-detail-panel product-basic-info">
                                <div class="panel-header">
                                    <div class="panel-title">
                                        <div class="basic-info-title">Thông tin cơ bản</div>
                                    </div>
                                </div>
                                <div class="panel-content-wrapper">
                                    <div class="panel-content">
                                        @* Hình ảnh *@
                                        <div class="edit-row">
                                            <div class="edit-label edit-title">
                                                <span><span style="color: red;">*</span> Hình ảnh sản phẩm</span>
                                            </div>
                                            <div class="edit-main image-offset" style="height: 135px; max-height: 135px;">
                                                <div style="line-height: 40px;">
                                                    <div class="edit-label edit-title">
                                                        <span><span style="color: red;">*</span> Hình ảnh tỷ lệ 1:1</span>
                                                    </div>
                                                </div>
                                                <div class="edit-main tafi-image-manager" style="padding: 0 25px;">
                                                    <div class="container">
                                                        <div class="tafi-image-manager__itembox">
                                                            <input type="file" id="image-input" multiple accept="image/*" style="display: none;">
                                                            <label for="image-input" class="add-image">
                                                                <p><i class='bx bx-image-add'></i></p>
                                                                <p>Thêm hình ảnh (<span id="image-count">0</span>/3)</p>
                                                            </label>
                                                        </div>
                                                        <div class="preview-container">
                                                            @* Import Images of Products *@
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        @* Tên Sản phẩm *@
                                        <div class="edit-row">
                                            <div class="edit-label edit-title">
                                                <span><span style="color: red;">*</span> Tên sản phẩm</span>
                                            </div>
                                            <div class="edit-main">
                                                <div class="popover-wrap">
                                                    <div class="custom-len-calc-input product-edit-form-item">
                                                        <div class="product-edit-form-item-content">
                                                            <div class="tafi-input">
                                                                <div class="tafi-input__inner tafi-input__inner--large">
                                                                    <input type="text" placeholder="Nhập vào" size="large"
                                                                           resize="none" rows="2" minrows="2" maxlength="Infinity"
                                                                           restrictiontype="input" max="Infinity" min="-Infinity" class="tafi-input__input" id="text-input">
                                                                    <div class="tafi-input__suffix">
                                                                        <span class="tafi-input__suffix-split"></span>
                                                                        <span class="tafi-input__char-count"><span id="char-count">0</span>/120</span>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        @* Tên Ngành Hàng *@
                                        <div class="edit-row">
                                            <div class="edit-label edit-title">
                                                <span><span style="color: red;">*</span> Tên ngành hàng</span>
                                            </div>
                                            <div class="edit-main">
                                                <div class="popover-wrap">
                                                    <div class="custom-len-calc-input product-edit-form-item">
                                                        <div class="product-edit-form-item-content">
                                                            <div class="tafi-input">
                                                                <div class="tafi-input__inner tafi-input__inner--large">
                                                                    <select class="tafi-select" name="" id="">
                                                                        <option value="">Chọn ngành hàng</option>
                                                                        <option value="dienthoai">Điện thoại</option>
                                                                        <option value="thoitrang">Thời trang</option>
                                                                        <option value="giay">Giày</option>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        @* Mô tả sản phẩm *@
                                        <div class="edit-row">
                                            <div class="edit-label edit-title">
                                                <span><span style="color: red;">*</span> Mô tả sản phẩm</span>
                                            </div>
                                            <div class="edit-main">
                                                <div class="product--description">
                                                    <span class="async-component">
                                                        <div class="product-description-editor ls-upload-cmpt-container">
                                                            <div class="popover-wrap">
                                                                <div class="custom-len-calc-input product-edit-form-item">
                                                                    <div class="product-edit-form-item-content">
                                                                        <div class="tafi-input tafi-input__area">
                                                                            <textarea type="textarea" resize="none" rows="2" 
                                                                                      minrows="9" maxrows="26" autosize="true" 
                                                                                      maxlength="Infinity" restrictiontype="input" 
                                                                                      max="Infinity" min="-Infinity" 
                                                                                      class="tafi-input__inner tafi-input__inner--normal"
                                                                                      id="tafi-input-area"
                                                                                      style="resize: none; min-height: 209.6px; height: 209.6px;" 
                                                                                      spellcheck="false"></textarea>

                                                                        </div>
                                                                        <div class="text-area-label">
                                                                            <span class="text-area-label-pre" id="text-area-pre">0</span>
                                                                            <span>/1000</span>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

