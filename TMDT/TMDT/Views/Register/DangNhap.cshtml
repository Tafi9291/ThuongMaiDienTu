
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/Layout-NgMua.cshtml";
}

<div class="main">

    <form action="/" method="post" class="form" id="form-2" style="margin-top: 142px;">
        <h3 class="heading">Đăng nhập</h3>
        <p class="desc"> Mua hàng tại TFT-Market ❤️</p>

        <div class="spacer"></div>
        <div class="form-group">
            <label for="fullname" class="form-label">Tên đầy đủ</label>
            <input type="text" name="fullname" value="" id="fullname" placeholder="VD: Xuân Sơn" class="form-control" required />

            <span class="form-message"></span>
        </div>
        <div class="form-group">
            <label for="password" class="form-label">Mật khẩu</label>
            <input type="password" name="password" value="" id="password" placeholder="Nhập mật khẩu" class="form-control" required />

            <span class="form-message"></span>
        </div>
        <p style="color:red;text-align:center">
            @if (ViewBag.error1 != null)
            {@ViewBag.error1}
        </p>

        <button type="submit" class="form-submit">Đăng nhập</button>

        <div class="form-group">
            <a href="@Url.Action("DangKy", "Register")" class="form-register">Đăng ký tài khoản</a>
        </div>
    </form>
</div>

